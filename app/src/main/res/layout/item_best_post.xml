<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView

            android:id="@+id/border"
            android:layout_width="65dp"
            android:layout_height="45dp"

            android:background="@drawable/square_border"

            android:layout_marginBottom="5dp"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="63dp"
            android:layout_height="43dp"

            android:background="@drawable/sample_image"

            android:layout_marginBottom="4dp"
            android:layout_marginStart="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/pretendard_medium"
            android:text="sample sample sample"
            android:textColor="#4B4B4B"
            android:textSize="12dp"
            android:singleLine="true"

            android:layout_marginStart="8dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/border"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comment_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="[107]"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/main_green"
            android:textSize="12dp"

            android:layout_marginStart="2dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/extra_context_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="ㅇㅇ   조회수 123"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="10dp"
            android:textColor="#4B4B4B"
            android:singleLine="true"

            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/border"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0.8dp"

            android:background="@drawable/more_gray_line"

            android:layout_marginHorizontal="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>